@model MultiPlug.Ext.ASM.DEK.Models.Apps.ProductFiles.ProductFiles
@{ 
    int i = 0;
}
<section class="row-fluid">

    <div class="row-fluid">
        <div class="box">
            <div class="span2">
            </div>
            <div class="span8">
                <h3 style="text-align:center">DEK Product Files</h3>
            </div>
            <div class="span2">
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="box">
            <h4>Select a file to read</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>File Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var File in @Model.Files)
                    {
                        <tr>
                            <td><a href="/apps/asm-dek/dek-product-files/productfile/?index=@i">@File</a></td>
                        </tr>

                        i++;
                    }
                </tbody>
            </table>
        </div>
    </div>


</section>

<script>

</script>